public static void register (Player aPlayer)
{
    Scanner scan = new Scanner(System.in);
  
    System.out.print("\n\t\tEnter your name: ");
    String aName = scan.nextLine();
    aPlayer.setName(name);
    System.out.print("\n\t\tEnter your username: ");
    String aUser = scan.nextLine();
    aPlayer.setUsername(username);
    System.out.print("\n\t\tEnter your password: ");
    String aPass = scan.nextLine();
    aPlayer.setPassword(password); 
  
    Player thePlayer = new Player(aName, aUser, aPass);
}

public class Player {

private String name;
private String username;
private String password;
 
//Initialises the variables
public Player()
{
    name = "";
    username = "";
    password = "";
}



public Player (String name, String username, String password)
{
    this.name = name;
    this.username = username;
    this.password = password;
}

//Getters
public string getName()
{ 
     return name;
}

public string getUsername()
{
     return username;
}

public string getPassword()
{
      return password;
}
//Setter

public void setName(string name)
{ 
    this.name = name;
}

public void setUsername(string username)
{ 
    this.username = username;
}

public void setPassword(string password)
{ 
    this.password = password;
}
 
 

